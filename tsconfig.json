{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es5",
		"moduleResolution": "node",
		"sourceMap": true,
		"jsx": "react",
		"outDir": "dist",
		"resolveJsonModule": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
	},
	"lib": [
		"es2015"
	],
	"include": [
		"./src/"
	]
}